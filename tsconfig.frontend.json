{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build/frontend",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "noEmit": false,
    "lib": [
      "es2017",
      "dom"
    ],
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "scripts/**/*",
    "tests/**/*",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.backend.ts"
  ]
}